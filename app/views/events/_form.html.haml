= form_for(@event) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2
        = pluralize(@event.errors.count, "error")
        prohibited this event from being saved:
      %ul
        - @event.errors.full_messages.each do |message|
          %li= message
  /
    <div class="field">
    <haml:loud> f.label :parent </haml:loud><br>
    <haml:loud> f.number_field :parent </haml:loud>
    </div>
  .form-group.form-field-spacer
    = f.label :name, :class => 'custom-contact-label', :for => 'firstNameField' do
      Name of Event
    = f.text_field :name, :class => 'form-control custom-at-colors', :id => 'firstNameField', :placeholder => 'Software Defined Radio with HackRF'
  .form-group.form-field-spacer
    = f.label :description, :class => 'custom-contact-label', :for => 'descriptionField' do
      More details
    = f.text_area :description, :class => 'form-control custom-at-colors', :id => 'descriptionField', :placeholder => '', cols: 20, rows: 5
  .field
    = f.label :starttime, :class => 'custom-contact-label' do
      Start Time
    %br/
    = f.datetime_select :starttime, {ampm: true}
  .field
    = f.label :endtime, :class => 'custom-contact-label' do
      End Time
    %br/
    = f.datetime_select :endtime, {ampm: true}
  .form-group.form-field-spacer
    = f.label :location, :class => 'custom-contact-label', :for => 'locationField' do
      Location of event
    = f.text_field :location, :class => 'form-control custom-at-colors', :id => 'locationField', :placeholder => 'UGLC Room 308'
  .form-group.form-field-spacer
    = f.label :owners, :class => 'custom-contact-label', :for => 'eventOwnerField' do
      Event Owner(s)
    = f.hidden_field :event_id, :value => @event.id
    = f.collection_select(:owner_ids, User.all, :id, :name, {}, :class => "form-control", :multiple => true, :id => "eventOwnerField")
  .form-group.form-field-spacer
    = f.label :gallery_tags, :class => 'custom-contact-label', :for => 'tagsField' do
      Event Tags (Separated by commas)
    = f.text_field :gallery_tags, :class => 'form-control custom-at-colors', :id => 'tagsField', :placeholder => 'computers, joomla'
