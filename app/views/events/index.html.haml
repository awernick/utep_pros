- provide(:title, "Events")
.container.body-content-wrapper
  %h1 All events
  .btn-group.btn-group-justified{"aria-label" => "Justified button group", :role => "group"}
    %a.btn.btn-default{:href => "/events", :role => "button"} List View
    %a.btn.btn-default{:href => "#", :role => "button"} Calendar View
  / Render the components that have the search functions.
  = render 'search_and_sort_components'
  .event-elements-wrapper
    = render "event", :locals => { :events => @events}
  .col-md-12
    = link_to 'Load More Events', events_path(:page => @events.next_page), :class => 'load-more-events btn btn-default', :remote => true if @events.next_page
  = link_to 'New Event', new_event_path
