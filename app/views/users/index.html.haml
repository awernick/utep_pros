- provide(:title, "Users")
%h1 Listing users
%table
  %thead
    %tr
      %th Name
      %th Username
      %th Email
      %th Password
      %th Usertype
      %th Block
      %th Sendemail
      %th Registerdate
      %th Lastvisitdate
      %th Activation
      %th Params
      %th Lastresettime
      %th Resetcount
      %th{:colspan => "3"}
  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.username
        %td= user.email
        %td= user.password
        %td= user.usertype
        %td= user.block
        %td= user.sendEmail
        %td= user.registerDate
        %td= user.lastvisitDate
        %td= user.activation
        %td= user.params
        %td= user.lastResetTime
        %td= user.resetCount
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }
%br
= link_to 'New User', new_user_path
