<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :username %>
    <%= f.input :email %>
    <%= f.input :password %>
    <%= f.input :usertype %>
    <%= f.input :block %>
    <%= f.input :sendEmail %>
    <%= f.input :registerDate %>
    <%= f.input :lastvisitDate %>
    <%= f.input :activation %>
    <%= f.input :params %>
    <%= f.input :lastResetTime %>
    <%= f.input :resetCount %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
