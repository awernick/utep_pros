= simple_form_for(@user) do |f|
  = f.error_notification
  .form-inputs
    = f.input :name
    = f.input :username
    = f.input :email
    = f.input :password
    = f.input :usertype
    = f.input :block
    = f.input :sendEmail
    = f.input :registerDate
    = f.input :lastvisitDate
    = f.input :activation
    = f.input :params
    = f.input :lastResetTime
    = f.input :resetCount
  .form-actions
    = f.button :submit
