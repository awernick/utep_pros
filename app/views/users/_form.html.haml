= simple_form_for(@user) do |f|
  = f.error_notification
  .container
    .form-inputs
      .form-group
      = f.input :name, :class => "form-control custom-at-colors"
      = f.input :username, :class => "form-control custom-at-colors"
      = f.input :email, :class => "form-control custom-at-colors"
      = f.input :password, :class => "form-control custom-at-colors"
      = f.input :usertype, :class => "form-control custom-at-colors"
      = f.input :block
      = f.input :sendEmail
      = f.input :registerDate
      = f.input :lastvisitDate
      = f.input :activation
      = f.input :params
      = f.input :lastResetTime
      = f.input :resetCount

    .form-actions
    = f.button :submit
